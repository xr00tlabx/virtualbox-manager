# Environment Configuration
NODE_ENV=development
PORT=3001

# Database
MONGODB_URI=mongodb://localhost:27017/virtualbox-manager

# Frontend
FRONTEND_URL=http://localhost:3000

# Logging
LOG_LEVEL=info

# VirtualBox
VM_STORAGE_PATH=C:\VirtualBox VMs

# Security (for future JWT implementation)
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRE=30d

# File Upload
MAX_FILE_SIZE=10mb

# Snapshot Settings
MAX_SNAPSHOTS_PER_VM=10
AUTO_CLEANUP_SNAPSHOTS=true

# Script Execution
MAX_SCRIPT_EXECUTION_TIME=3600
SCRIPT_TEMP_DIR=./temp

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
